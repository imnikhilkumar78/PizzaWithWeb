@model PizzaApplication.Models.UserDTO

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>UserDTO</h4>
<hr />
<body style="background-image:url(/img/loginpizza.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Cranky Yankees Pizzeria</h5>
                        @using (Html.BeginForm("Login", "User", FormMethod.Post))
                        {
                            @*<div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <span class="h1 fw-bold mb-0">Cranky Yankees Pizzeria</span>
                                </div>*@
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                @* @Html.LabelFor(m => m.UserEmail, new { @class = "col-md-2 control-label" })*@
                                <label for="floatingInput">Email address</label>
                                <br />
                                @Html.EditorFor(m => m.Id, new { @class = "form-control" })


                            </div>

                            <div class="form-floating mb-3">
                                <label for="floatingPassword">Password</label>
                                <br />
                                @* @Html.LabelFor(m => m.Password)*@
                                @Html.EditorFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="pt-1 mb-4">
                                <input type="submit" value="Log In" class="btn btn-dark btn-lg btn-block" />
                            </div>
                        }
                        <div class="btn btn btn-dark btn-lg btn-block" style="color: #393f81; ">
                            <a asp-action="Register">Register</a>
                        </div>
                        <br />
                        <h3 style="font-size:15px;color:red;">  @ViewBag.alert</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
