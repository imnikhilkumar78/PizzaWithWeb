@model IEnumerable<PizzaApplication.Models.PizzaDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ ViewData["Title"] = "Index"; }
<h1> Pizza Index </h1>
<h2> @ViewBag.Status</h2>
<head>
    <style>
        .btn.btn-outline-danger:hover {
            color: #fff;
        }
    </style>
</head>

<div class="card-columns">

    @foreach (var item in Model)
    {
<div class="card text-center" style="width: 18rem;">
    <tr>
        <td>
            <img src="@item.Imageurl" class="card-img-top" alt="Image not Available" />
        </td>
        <div class="card-body">
            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Name)</h5>

        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Price : @Html.DisplayFor(modelItem => item.Price)</li>

            <li class="list-group-item">Speciality : @Html.DisplayFor(modelItem => item.Speciality)</li>

            <li class="list-group-item">IsVeg : @Html.DisplayFor(modelItem => item.IsVeg)</li>
            <li class="list-group-item">
                <div class="btn btn-outline-danger">

                    @*@Html.ActionLink("Add", "Select_This", new { id = item.PizzaId }, new { @style = "color: #540615 ; text-decoration: none ;" })*@
                    <form action="@Url.Action("Select_This",new { id = item.PizzaId })" method="post">
                        <input type="submit" class="btn text-light" value="Add Pizza" />
                    </form>

                </div>
            </li>
        </ul>

        @*<td>
                <div class="btn btn-dark">
                    @Html.ActionLink("Select_This", "Select_This", new { id = item.PizzaId })
                </div>
            </td>
        *@
    </tr>
</div>      }
</div>

<tbody>
</tbody>
